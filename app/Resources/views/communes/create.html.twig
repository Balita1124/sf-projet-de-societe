{% extends 'base.html.twig' %}
{% block title %}Commune | Madagascar{% endblock %}
{% block body %}
    <div class="row">
        <div id="formulaire" class="col-md-6 col-md-offset-3">
            <div class="well well-sm">
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                    <fieldset>
                        <legend class="text-center form-legend">Ajouter une commune</legend>

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="name">Nom</label>
                            <div class="col-md-9">
                                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="region">District</label>
                            <div class="col-md-9">
                                {{ form_widget(form.district, { 'attr': {'class': 'form-control', 'placeholder': 'District'} }) }}
                            </div>
                        </div>
                        <!-- Form actions -->
                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary btn-lg">Enregistrer</button>
                            </div>
                        </div>
                    </fieldset>
                {{ form_end(form) }}
            </div>
{% endblock %}